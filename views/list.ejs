<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Company</title>
    <style>
    html, body {
        /* border: 1px solid red; */
        margin: 0 auto;
        padding: 0 auto;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    header {
        /* border: 1px solid green; */
        /* display: inline-block; */
        text-align: center;
        background-color: hsla(248, 100%, 11%, 0.96);
    }

    .register, .login, .company, .userjob, .job, .pelamar , .halo{
        /* border: 1px solid red; */
        display: inline-block;
        text-decoration: none;
    }

    .register:hover, .login:hover, .company:hover, .userjob:hover, .job:hover, .pelamar:hover , .halo:hover{
        color: whitesmoke;
    }

    .halo {
        float: left;
    }


    section {
        /* border: 1px solid red; */
        height: 500px;
        background-image: url('https://www.jobstreet.co.id/hpstc/default/common/img/home-banner/home-id-1350x500.jpg');         
    }

    section h1 {
        margin: 0 auto;
        padding: 0 auto;
        position: absolute;
        font-size: 70px;
        left: 450px;
        color: rgb(240, 192, 128);
        font-style: initial;
    }

    footer {
        /* border: 1px solid green; */
        height: 80px;
        background-color: hsla(248, 100%, 11%, 0.96);
        text-align: center;
    }

    .instagram, .facebook, .twitter {
        display: inline-block;
        text-decoration: none;
    }

    .instagram:hover, .facebook:hover, .twitter:hover {
        color: whitesmoke;
    }

    .profile {
        /* border: 5px dashed green; */
        height: 400px;
        width: 500px;
        position: absolute;
        right: 20px;
        top: 130px;
        background-color: rgb(253, 250, 246);
        opacity: 0.6;
        border-radius: 20px;
    }

    .profile h2 {
        color: hsla(248, 65%, 28%, 0.96);
    }

    .job {
        margin: 0 auto;
        padding: 0 auto;
    }

    .kotak {
        border: 1px solid #dedede;
        background-color: azure;
        /* display: inline-block; */
        /* width: 200px; */
        opacity: 0.6;
        padding: -15px;
        color: black;
        z-index: 0;
    }


    .sectiona {
        overflow-y: scroll;
        max-width:1300px;
        max-height:500px;
        text-align: center;
        /* padding: 15px; */
    }

    .kotak2 {
        border: 1px solid #dedede;
        fill-opacity: initial;
        z-index: 1;
        color: black;
    }


    </style>
</head>
<body>
        <header>

        <%-include('./partial/partialUser.ejs', {})%>
        <a href="/user/profile" class="halo"><h1>Halo, <%= `${data.username}`  %></h1></a>

        </header>

        <section>

        <div class="sectiona">

       
        <% output.forEach(job=>{ %>
            <div class="kotak">
                <div class="kotak2">
                    
                    <%= job.Job.Company.companyname%> <br>
                    Status: <%= job.status %> <br>
                    User Id: <%= job.UserId %> <br>
                    Job Id <%= job.JobId %> <br>
                    Jadwal Interview:  <%= job.interviewDate %> <br>
                    Nama Pekerjaan: <%= job.Job.jobname %> <br>
                    Position: <%= job.Job.position %> <br>
                    Salary: <%= job.Job.salary %> <br>
                    Requirement IPK: <%= job.Job.requirement_ipk %> <br>
                    Requirement Skill: <%= job.Job.requirement_skill %> <br>
                    
                    <p><%=time(job.createdAt)%></p>
                </div>
            </div>
        
         <% }) %>

        </div>
        </section>

        <footer>
        <footer>
            <a href="" class="instagram"><h4>Instagram</h4></a>
            <a href="" class="facebook"><h4>Facebook</h4></a>
            <a href=""class="twitter">Twitter</a>
        </footer>
        </footer>
</body>
</html>